{
    "name": "PhotoSharing Dev Environment",
    "dockerComposeFile": "docker-compose.yml",
    "service": "dev",
    "workspaceFolder": "/workspace",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-vscode.vscode-node-sqlite3",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-pg",
                "dsznajder.es7-react-js-snippets"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "sqltools.connections": [
                    {
                        "name": "PhotoSharing DB",
                        "driver": "PostgreSQL",
                        "server": "postgres",
                        "port": 5432,
                        "database": "photosharing",
                        "username": "node",
                        "password": "node"
                    }
                ]
            }
        }
    },

    "features": {
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/git:1": {}
    },

    "postCreateCommand": "echo 'Installing dependencies...' && npm install && cd server && npm install --legacy-peer-deps && echo 'Container setup complete'",

    "remoteUser": "node",

    "forwardPorts": [3000, 5173, 5432],
    
    "shutdownAction": "stopContainer",
    
    "waitFor": "postCreateCommand"
}
